<extentreports>
    <configuration>
        <!-- Report Title -->
        <reportName>Automation Test Report</reportName>
        <documentTitle>Execution Summary</documentTitle>

        <!-- Theme: STANDARD or DARK -->
        <theme>DARK</theme>

        <!-- Encoding -->
        <encoding>UTF-8</encoding>

        <!-- Timeline visibility -->
        <timelineEnabled>true</timelineEnabled>

        <!-- Timestamp format -->
        <timeStampFormat>dd MMM yyyy HH:mm:ss</timeStampFormat>
    </configuration>

    <systemInfo>
        <info>
            <key>Browser</key>
            <value>${browser}</value>
        </info>

        <info>
            <key>Base URL</key>
            <value>${baseURL}</value>
        </info>

    </systemInfo>
</extentreports>
